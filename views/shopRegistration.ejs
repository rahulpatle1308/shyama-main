<!DOCTYPE html>
<html>
<head>
  <title>LoungeSchema</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

  <link rel="stylesheet" href="/stylesheets/registerProvider.css">
  <link rel="stylesheet" href="/stylesheets/nav.css">
  <link rel="stylesheet" href="/stylesheets/footer.css">

</head>
<body>
  <header class="header">
    <a href="/">
      <img src="/images/shyama.-removebg-preview.png" alt="image" class="logo">
     </a> 
    <!-- <nav class="navbar"> -->
      <ul class="main-nav">
        <li><a href="/shopProviderLogin"><i class="ri-arrow-left-fill"></i></a></li>
        <li><a href="/">Home</a></li>
        <li><a href="#footer-container" >Contact</a></li>
      </ul>

      <ul class="burgger">
        <li><a href="/">Home</a></li>
        <li><a href="#footer-container" >Contact</a></li>
      </ul>
      <i id="menu-toggle" class="ri-menu-fold-line"></i>

  </header>

  <div class="main-container">
    <div class="image-container">
      <img src="/images/shop_img.jpg" alt="Lounge Provider Image">

    </div>
    <div class="form-container container">
      <h2>Shop Registration</h2>

      <form class="registration-form" action="/shopRegistration" method="post">

        <div class="form-group d-flex flex-column">
          <label for="name">Name</label>
          <input type="text" id="name" name="shopName" placeholder="Shop Name" required>
        </div>

        <div class="form-group d-flex flex-column">
          <label for="email">Email</label>
          <input type="email" id="email" name="shopEmail" placeholder="Shop Email" required>
        </div>

        <div class="form-group d-flex flex-column">
          <label for="phone">Phone Number</label>
          <input type="tel" id="phone" name="shopPhoneNo" placeholder="Shop Phone No" >
        </div>
        
        <div class="form-group d-flex flex-column">
          <label for="phone">Station Name</label>
          <select name="stationLocation" id="option" type="text">
            <% stationsArray.forEach(station => { %>
              <option class="option" value="<%=station%>"><%= station %></option>
            <% }); %>
          </select>
        
        </div>

        <input type="text" name="shopProviderId" value="<%= shopUser._id%>" style="visibility: hidden;">

        <h3>Fill all details correctly ‚òëÔ∏è, and register your shop üòä</h3>

        <button type="submit">Register</button>
      </form>
    </div>
  </div>

  <%- include('footer/footer.ejs') -%>
  <script src="\javascripts\nav.js"></script>
</body>
</html>
