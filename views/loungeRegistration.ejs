<!DOCTYPE html>
<html>
<head>
  <title>LoungeSchema</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">


  <link rel="stylesheet" href="/stylesheets/registerProvider.css">
  <link rel="stylesheet" href="/stylesheets/nav.css">

  <style>
    body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;

    }

    footer {
    background-color: #0ac086d0;
    color: #ffffff;
    padding: 20px;
    z-index: 99999;
    }

    .footer-container {
    /* padding-bottom: 30px; */
    /* background-color: #333; */
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    max-width: 100%;
    margin: 0 auto;

    }

    .footer-container p {
    margin: 0;
    padding:  0.8vw  1vw;
    font-size:1.3vw;
    /* background-color: antiquewhite; */
    width: 70%;
    text-align: center;
    }

    .footer-link-div {
    /* background-color: #ccc; */
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    margin-top: 20px;
    justify-content: space-between;
    /* background-color: aqua; */
    justify-content: center;

    padding: 1vw;
    overflow-x: hidden;
    }

    .footer-links {
    list-style-type: none;
    /* margin: 0; */
    padding: 0 3vw;
    display: flex;
    flex-direction: column;
    gap: 1.5vh;
    margin-right: 70px;
    }



    .footer-links li {
    margin-bottom: 10px;
    }

    .footer-links li a {
    text-decoration: none;
    font-size: 20px;
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    color: #050404c7;

    }

    .footer-icon {
    margin-top: 20px;
    padding: 1vw;
    }

    .footer-icon i {
    margin-right: 30px;
    font-size: 20px;
    background-color: #13b783;
    border-radius: 50%;
    padding: 5px;
    }
    .footer-icon i:hover{
    background-color: #ffffff;
    color: #333;
    }

    hr {
    margin-top: 20px;
    border: none;
    border-top: 1px solid #ccc;
    }

    @media only screen and (max-width: 622px) {
    /* Styles for smaller screens */
    .footer-links {
        margin-bottom: 20px;
        flex: initial;
        gap: .1vh;
    }

    .footer-link-div {
        flex-direction: column;
    }
    .footer-links li a{
        font-size: 15px;
    }
    .footer-icon i {
        margin-right: 15px;
        font-size: 14px;
      
    }
    .footer-container p{
        font-size: 4vw;
        padding: 2.5vw 0;
        /* background-color: aqua; */

    }
}

  </style>
 
</head>
<body>

  <header class="header">
    <img src="/images/shyama.-removebg-preview.png" alt="image" class="logo">
    <!-- <nav class="navbar"> -->
      <ul class="main-nav">
        <li><a href="/loungeProviderLogin"><i class="ri-arrow-left-fill"></i></a></li>
        <li><a href="/">Home</a></li>
        <li><a href="#footer-container" >Contact</a></li>
      </ul>

      <ul class="burgger">
        <li><a href="/">Home</a></li>
        <li><a href="#footer-container" >Contact</a></li>
      </ul>
      <i id="menu-toggle" class="ri-menu-fold-line"></i>

  </header>

  <div class="main-container">
    <div class="image-container">
      <img src="https://images.unsplash.com/photo-1530646182317-74e58ed702ab?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" alt="Lounge Provider Image">

    </div>
    <div class="form-container container">
      <h2>Lounge Registration</h2>
  
      <form class="registration-form" action="/loungeRegistration" method="post" enctype="multipart/form-data">
  
        <div class="form-group d-flex flex-column">
          <label for="name">Name</label>
          <input type="text" id="name" placeholder="lounge name" name="loungeName" required>
        </div>
  
        <div class="form-group d-flex flex-column">
          <label for="email">Email</label>
          <input type="email" id="email" placeholder="lounge email" name="loungeEmail" required>
        </div>
  
        <div class="form-group d-flex flex-column">
          <label for="phone">Phone Number</label>
          <input type="tel" id="phone" placeholder="lounge phone number" name="loungePhoneNo" >
        </div>
  
        <div class="form-group d-flex flex-column">
          <label for="phone">No Of Seats</label>
          <input type="tel" id="phone" placeholder="lounge no of seats" name="noOfSeats" >
        </div>
  
        <div class="form-group d-flex flex-column">
          <label for="image">Image</label>
          <input type="file" id="image" placeholder="lounge image" name="loungeImage" >
        </div>
  
        <div class="form-group d-flex flex-column">
          <label for="phone">Station Name</label>
          <select name="stationLocation" id="option" type="text">
            <% stationsArray.forEach(station => { %>
              <option class="option" value="<%=station%>"><%= station %></option>
            <% }); %>
          </select>
        
        </div>

        <input type="text" name="loungeProviderId" value="<%= loungeProvider._id%>" style="visibility: hidden;">
        <h3>Fill all details correctly ‚òëÔ∏è, and register your lounge üòä</h3>
        
        <button type="submit">Register</button>
      </form>
    </div>
  </div>
  <%- include('footer/footer.ejs') -%>
  <script src="\javascripts\nav.js"></script>
</body>
</html>
